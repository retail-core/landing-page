---
// Define the navigation links data structure for easy maintenance
const navLinks = [
    { title: "Services", href: "#services" },
    { title: "Features", href: "#features" },
    { title: "How it work", href: "#how-it-work" },
    { title: "Pricing", href: "#pricing" },
];
---

<nav
    class="w-full border-gray-100 bg-white"
    role="navigation"
    aria-label="Main Navigation"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="h-16 flex items-center justify-between">
            <a href="/" class="flex items-center space-x-2 flex-shrink-0">
                <div class="w-5 h-5 rounded-full bg-blue-600"></div>
                <span class="text-xl font-bold text-gray-800">Jarabiz</span>
            </a>

            <div class="hidden md:flex items-center space-x-6">
                <ul class="flex space-x-6" role="list">
                    {
                        navLinks.map((link) => (
                            <li role="listitem">
                                <a
                                    href={link.href}
                                    class="text-gray-600 hover:text-blue-600 font-medium transition duration-150"
                                >
                                    {link.title}
                                </a>
                            </li>
                        ))
                    }
                </ul>

                <button
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 shadow-md ml-4"
                >
                    Login
                </button>
            </div>

            <button
                id="mobile-menu-toggle"
                class="md:hidden p-2 text-gray-600 hover:text-gray-800 transition duration-150"
                aria-label="Toggle navigation menu"
                aria-expanded="false"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
            {
                navLinks.map((link) => (
                    <a
                        href={link.href}
                        class="block text-gray-700 hover:bg-gray-50 px-3 py-2 rounded-md font-medium"
                    >
                        {link.title}
                    </a>
                ))
            }
            <a
                href="/login"
                class="block bg-blue-50 text-blue-600 hover:bg-blue-100 px-3 py-2 rounded-md font-medium mt-1"
            >
                Login
            </a>
        </div>
    </div>
</nav>

<script>
    const button = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");

    if (button && menu) {
        button.addEventListener("click", () => {
            const isExpanded =
                button.getAttribute("aria-expanded") === "true" || false;
            button.setAttribute("aria-expanded", String(!isExpanded));
            menu.classList.toggle("hidden");
        });
    }
</script>
