---
// import { Image } from 'astro:assets';
// Assuming your hero image is in src/assets/hero-phones.png
import Image from 'astro/components/Image.astro';
import HeroPhonesImage from '../assets/hero-phones.png'; 
//A5B4FC
---
<section class="min-h-[85vh] relative overflow-hidden bg-white mx-4 my-2 rounded-3xl">
    <div 
        class="absolute inset-0 z-0 opacity-10" 
        style="background: radial-gradient(circle at 75% 25%, #3d57d7, transparent);"
    ></div>

    <div class="max-w-7xl mx-auto h-full px-4 sm:px-6 lg:px-8 pt-10 pb-10 md:pt-20 md:pb-24 relative z-10">

        <div class="md:grid md:grid-cols-12 md:gap-12 md:items-center">

            <div class="md:col-span-6 lg:col-span-5 text-center md:text-left mb-12 md:mb-0">
                
                <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-gray-900 mb-6 tracking-tight">
                    Grow Faster with Smart Tools
                </h1>
                
                <p class="text-lg text-gray-600 mb-8 max-w-xl mx-auto md:mx-0">
                    Jarabiz helps restaurants and stores manage sales, inventory, staff, and reports, all in one platform
                </p>

                <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg shadow-xl transition duration-200 text-lg">
                    Join the waitlist
                </button>

                <div class="mt-8 flex justify-center md:justify-start items-center">
                    <span class="text-yellow-500 text-xl mr-2">★★★★★</span> 
                    <span class="text-gray-500 font-medium">4.9 <span class="font-semibold">•</span> 950+ Reviews</span>
                </div>
            </div>

            <div class="md:col-span-6 lg:col-span-7 flex justify-center md:justify-end relative h-full min-h-[400px]">
                
                <div class="relative w-full h-full max-w-xl">
                    
                    <Image
                    quality={100} 
                        srcset="/images/hero.webp"
                        src="/images/hero.webp"
                        alt="Jarabiz application screens on mobile phones"
                        width={650}
                        widths={[350, 650]}
                        height={1200}
                        sizes="(max-width: 768px) 350px, 650px"
                        class="absolute inset-0 w-full h-auto transform translate-y-[-5%] rotate-3 object-contain"
                    />

                </div>
            </div>

        </div>
    </div>
</section>