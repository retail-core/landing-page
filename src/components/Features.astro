---
// Define the data for the four features, including background colors
const featuresData = [
    {
        title: 'Inventory Management',
        subtitle: 'Stay on top of every product, every time.',
        bgColor: 'bg-blue-50/70', // Light blue background
        list: [
            'Add, edit, and categorize products easily',
            'Monitor stock levels and get low-stock alerts',
            'Sync inventory across all your stores',
        ],
        imagePath: '/src/assets/inventory-screen.png', // Placeholder image path
    },
    {
        title: 'Point of Sales',
        subtitle: 'Sell smarter and faster from any device.',
        bgColor: 'bg-pink-50/70', // Light pink background
        list: [
            'Record in-store and online sales instantly',
            'Track customer purchases in real time',
        ],
        imagePath: '/src/assets/pos-screen.png', // Placeholder image path
    },
    {
        title: 'Reports & Analytics',
        subtitle: 'Turn data into smarter business decisions',
        bgColor: 'bg-orange-50/70', // Light orange background
        list: [
            'View daily, weekly, or monthly trends',
            'Track expenses and revenue trends',
            'Identify top-selling products and peak hours',
            'Export detailed reports anytime',
        ],
        imagePath: '/src/assets/reports-screen.png', // Placeholder image path
    },
    {
        title: 'Staff Management',
        subtitle: 'Empower your team and boost accountability',
        bgColor: 'bg-green-50/70', // Light green background
        list: [
            'Add staff accounts with role-based access',
            'Protect sensitive data with permissions',
        ],
        imagePath: '/src/assets/staff-screen.png', // Placeholder image path
    },
];

// Import Astro Image component and placeholder image asset
import { Image } from 'astro:assets';
// NOTE: For clean code, ensure you have these placeholder images in your src/assets folder
import InventoryScreen from '/public/images/hero.webp'; 
import POSScreen from '/public/images/hero.webp';
import ReportsScreen from '/public/images/hero.webp';
import StaffScreen from '/public/images/hero.webp';

// Array of imported image variables to easily access inside map
const imageMap = [InventoryScreen, POSScreen, ReportsScreen, StaffScreen];
---

<section id="features-showcase" class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="text-center mb-16 md:mb-20 max-w-2xl mx-auto">
            <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-4">
                Tools that keep your business - without stress.
            </h2>
            <p class="text-lg text-stone-600">
                Run sales, stock, and daily operations from one place â€” fast, simple, and built for growth.
            </p>
        </div>

        <div class="space-y-16 md:space-y-24">
            {featuresData.map((feature, index) => {
                const isEven = index % 2 === 0;

                return (
                    <div 
                        class={`
                            p-6 md:p-12 rounded-3xl relative overflow-hidden 
                            ${feature.bgColor}
                        `}
                    >
                        <div class="md:grid md:grid-cols-12 md:gap-10 items-center">
                            
                            <div class={`
                                md:col-span-6 
                                ${isEven ? 'order-2' : 'order-1'}
                                flex justify-center 
                                relative h-full min-h-[300px]
                            `}>
                                <div class="relative w-full h-full max-w-sm mx-auto md:mx-0">
                                    <Image 
                                        src={imageMap[index]}
                                        alt={`Mockup of ${feature.title}`}
                                        width={450}
                                        class="absolute inset-0 w-full h-auto transform rotate-3 object-contain"
                                    />
                                </div>
                            </div>
                            
                            <div class={`
                                md:col-span-6 
                                ${isEven ? 'order-1 md:pr-10' : 'order-2 md:pl-10'}
                                mb-8 md:mb-0
                            `}>
                                <h3 class="text-2xl font-bold text-gray-800 mb-4">
                                    {feature.title}
                                </h3>
                                <p class="text-base text-gray-600 mb-6">
                                    {feature.subtitle}
                                </p>

                                <ul class="space-y-4 mb-8">
                                    {feature.list.map((item) => (
                                        <li class="flex items-start space-x-3 text-gray-700">
                                            <svg class="w-5 h-5 flex-shrink-0 mt-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                            <span>{item}</span>
                                        </li>
                                    ))}
                                </ul>

                                {/* <a href="#" class="inline-block text-blue-600 font-semibold hover:text-blue-700 transition duration-150">
                                    Get started &rarr;
                                </a> */}
                            </div>
                        </div>
                    </div>
                );
            })}
        </div>
    </div>
</section>