<section id="download-cta" class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gray-100 p-8 md:p-12 rounded-[32px] overflow-hidden">
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-20 items-center"
            >
                <div
                    class="order-2 md:order-1 flex justify-center md:justify-end relative"
                >
                    <Image
                        quality={100}
                        src={AppMockupImage}
                        alt="Jarabiz App Setup Mockup"
                        width={400}
                        widths={[300, 400]}
                        sizes="(max-width: 768px) 300px, 400px"
                        class="w-full max-w-xs md:max-w-md transform rotate-3"
                    />
                </div>

                <div class="order-1 md:order-2 text-center md:text-left">
                    <h2
                        class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-4"
