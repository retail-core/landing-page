---
const pricingData = {
    planName: 'Basic Plan',
    tagline: 'Free plan for all users',
    price: 'Free',
    cta: 'Get Started',
    features: [
        'Multi-store',
        'Staff management',
        'Unlimited order',
        'Whatsapp report delivery',
        'Automatic inventory import',
        '24/7 support',
    ],
};

// Define the custom gradient class names based on the design's colors
const GRADIENT_CLASS = 'bg-gradient-to-br from-[#121E42] to-[#25734A]';
---

<section id="pricing" class="py-16 md:py-28 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">

        <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-2">
            Simple Pricing
        </h2>
        <p class="text-lg text-gray-600 mb-12">
            Get started for free
        </p>

        <div class="inline-block max-w-sm md:max-w-md w-full">

            <div class={`
                ${GRADIENT_CLASS}
                p-6 md:p-8 
                rounded-2xl 
                shadow-2xl 
                text-white 
                text-left
            `}>
                <div class="text-center mb-8">
                    <p class="text-xl font-medium text-gray-300">
                        {pricingData.planName}
                    </p>
                    <p class="text-sm font-light text-gray-400 mb-4">
                        {pricingData.tagline}
                    </p>
                    
                    <h3 class="text-6xl font-extrabold mb-6">
                        {pricingData.price}
                    </h3>

                    <button class="
                        w-full 
                        bg-blue-600 hover:bg-blue-700 
                        text-white 
                        font-bold 
                        py-3 rounded-lg 
                        shadow-lg transition duration-200
                    ">
                        {pricingData.cta}
                    </button>
                </div>

                <ul class="space-y-4 pt-4 border-t border-gray-600">
                    {pricingData.features.map(feature => (
                        <li class="flex items-center space-x-3">
                            {/* Checkmark Icon */}
                            <svg class="w-6 h-6 flex-shrink-0 text-green-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-gray-200 font-medium">
                                {feature}
                            </span>
                        </li>
                    ))}
                </ul>
            </div>
        </div>

    </div>
</section>